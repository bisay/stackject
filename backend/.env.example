# ==========================================
# STACKJECT BACKEND - ENVIRONMENT VARIABLES
# ==========================================
# Copy this file to .env and fill in your values

# ============ REQUIRED ============

# Database connection (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/stackject?schema=public"

# JWT Secret - REQUIRED! Use a strong random string (min 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-min-32-chars"

# ============ PRODUCTION ============

# Set to 'production' in production environment
NODE_ENV="development"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3000"

# Admin Dashboard URL (for CORS)
ADMIN_URL="http://localhost:3002"

# Admin Setup Secret - Required for first admin creation
# Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ADMIN_SETUP_SECRET="your-random-setup-secret-here"

# ============ SECURITY CHECKLIST FOR PRODUCTION ============
# 
# [ ] Set NODE_ENV=production
# [ ] Use strong JWT_SECRET (64+ chars)
# [ ] Configure proper FRONTEND_URL and ADMIN_URL domains
# [ ] Enable HTTPS/SSL on your server
# [ ] Use strong database password
# [ ] Set up database backups
# [ ] Remove/change ADMIN_SETUP_SECRET after initial setup
# [ ] Configure firewall rules
# [ ] Set up monitoring and logging
